_realname=baka-mplayer

pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=2.0.2
pkgrel=1
pkgdesc="Baka MPlayer is a free and open source, cross-platform, libmpv based multimedia player."
url="http://bakamplayer.u8sand.net/"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=("${MINGW_PACKAGE_PREFIX}-mpv"
         "${MINGW_PACKAGE_PREFIX}-qt5")
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc"
             "git" "make" "pkg-config")
optdepends=(
  'youtube-dl: support for remote video streaming'
)

_gitroot="https://github.com/u8sand/Baka-MPlayer.git"
_gitname="release"

build() {
  cd "$srcdir"
  git clone ${_gitroot} -b ${_gitname} ${pkgname}
  cd "$pkgname"
  QMAKE=${MINGW_PREFIX}/bin/qmake \
    ./configure \
    INSTROOT="${pkgdir}" \
    CONFIG+=embed_translations \
    lupdate=${MINGW_PREFIX}/bin/lupdate \
    lrelease=${MINGW_PREFIX}/bin/lrelease
  make -j4
}

package() {
  cd "$srcdir/$pkgname"
  make install
}
